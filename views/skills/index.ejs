<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Express Skills</title>
</head>

<body>
  <a href="/">Home</a>
  <h1>Skill List</h1>
  <ul>
    <% skills.forEach(function(t) { %>
    <li>
      <form action="/skills/<%= t.id %>?_method=DELETE" method='POST'>
        <button class='delete-button' type='submit'>Delete Skill</button>
      </form>
      <p><%= t.skill %></p>
    </li>
    <% }); %>
  </ul>
  <form action='/skills' method='POST' autocomplete='off'>
    <input type='text' name='skill'>
    <button type='submit'>Add Skill</button>
  </form>
</body>

</html>